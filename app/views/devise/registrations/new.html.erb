<div id="main_container">

  <%= render 'layouts/menu' %>

  <div class="rsvp_header_photo general_header">
    <div class="page_header_trans">
    </div>
  </div>

  <div class="page_content">
    <div class="full_width_box">
      <h3><%= t('login.title') %></h3>

      <div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, size: 25, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :name %><br/>
            <%= f.text_field :name, size: 25, required: true %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, size: 25, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, size: 25, autocomplete: "off" %>
          </div>

          <br>

          <div class="actions">
            <%= f.submit t('login.create_account') %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>  <!--end of full width-->
  </div> <!--end of about content-->

  <%= render 'layouts/footer' %>

</div>
